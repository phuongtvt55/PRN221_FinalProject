@page
@model AdminManagement.Pages.Brands.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.LogoUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Html.DisplayFor(model => model.Brand.LogoUrl)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Status)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Brand.Status == 1)
            {
                <p class="text-success">Stocking</p>
            }
            else
            {
                <p class="text-danger">Delete</p>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Brand.BrandId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn-light">Back to List</a>
    </form>
</div>
<style>
    img{
        width: 200px;
        height: 200px;
    }
</style>
