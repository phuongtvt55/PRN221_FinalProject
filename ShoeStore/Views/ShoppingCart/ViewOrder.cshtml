@model IEnumerable<BusinessObject.OrderDetail>

@{
    ViewData["Title"] = "ViewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewOrder</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderStatus)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <img src="~/@Html.DisplayFor(modelItem => item.Product.ImageUrl)"  style="width: 200px; height: 200px;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderDate)
            </td>
            
                @foreach(var i in ViewBag.Order){
                    if(item.OrderId == i.OrderId){
                        <td>
                            @if(i.OrderStatusId == 1)
                            {
                                <p class="btn btn-success">@i.OrderStatus.StatusName</p>
                            }else if(i.OrderStatusId == 2)
                            {
                                <p class="btn btn-danger">@i.OrderStatus.StatusName</p>
                            }else{
                                <p class="btn btn-dark">@i.OrderStatus.StatusName</p>
                            }
                        </td>
                    }
                }
            
        </tr>
}
    </tbody>
</table>
